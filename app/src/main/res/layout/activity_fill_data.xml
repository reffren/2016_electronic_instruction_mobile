<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Информация о заявке"
        android:textColor="@color/color_for_large_text"
        android:id="@+id/textView0"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Дата выдачи заявки"
        android:textColor="@color/color_black"
        android:id="@+id/tvDataVidachiZayavki"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="14dp"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Технологическая карта"
        android:id="@+id/textView3"
        android:textColor="@color/color_for_large_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ФИО сигналистов"
        android:id="@+id/textView7"
        android:textColor="@color/color_for_large_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner6"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner7"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="false" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner8"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Место производства работ"
        android:id="@+id/textView2"
        android:textColor="@color/color_for_large_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMesto_km_1"
                android:layout_column="1"
                android:width="80dp"
                android:textAlignment="center"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="КМ"
                android:id="@+id/textView4"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMesto_pk_1"
                android:layout_column="3"
                android:width="80dp"
                android:textAlignment="center"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПК"
                android:id="@+id/textView5"
                android:layout_column="4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMesto_put_1"
                android:layout_column="5"
                android:width="80dp"
                android:textAlignment="center"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПУТЬ"
                android:id="@+id/textView6"
                android:layout_column="6" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMesto_km_2"
                android:layout_column="1"
                android:width="80dp"
                android:textAlignment="center"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="КМ"
                android:id="@+id/textView8"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etMesto_pk_2"
                android:layout_column="3"
                android:width="80dp"
                android:textAlignment="center"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПК"
                android:id="@+id/textView9"
                android:layout_column="4" />
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Дата проведения работ"
        android:id="@+id/textView10"
        android:textColor="@color/color_for_large_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Планируемая дата проведения работ"
        android:id="@+id/tvDataPlan"
        android:textColor="@color/color_black"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:onClick="onClick"
        android:clickable="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner9"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Дата и время действия
     предупреждения"
        android:id="@+id/textView12"
        android:textColor="@color/color_for_large_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Выбрать дату"
        android:textColor="@color/color_black"
        android:id="@+id/tvDate1"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:onClick="onClick"
        android:clickable="true"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="С"
            android:id="@+id/textView11"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etData_c_chasov_1"
            android:width="80dp"
            android:textAlignment="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="часов"
            android:id="@+id/textView13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etData_min_1"
            android:width="80dp"
            android:textAlignment="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="мин."
            android:id="@+id/textView14" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Выбрать дату"
        android:textColor="@color/color_black"
        android:id="@+id/tvDate2"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginLeft="5dp"
        android:onClick="onClick"
        android:clickable="true"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="С"
            android:id="@+id/textView16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etData_c_chasov_2"
            android:width="80dp"
            android:textAlignment="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="часов"
            android:id="@+id/textView17" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etData_min_2"
            android:width="80dp"
            android:textAlignment="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="мин."
            android:id="@+id/textView18" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ф.И.О. диспетчера"
        android:textColor="@color/color_for_large_text"
        android:id="@+id/textView19"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner10"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ф.И.О. инструктирующего"
        android:textColor="@color/color_for_large_text"
        android:id="@+id/textView20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner11"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сформировать инструктаж"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />
</LinearLayout>
</ScrollView>